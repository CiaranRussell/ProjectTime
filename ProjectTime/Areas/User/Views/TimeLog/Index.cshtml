@model IEnumerable<TimeLog>
@{
    ViewData["Title"] = "Index";
    var totalDuration = ViewBag.totalDuration;
    var minDate = ViewBag.minDate;
    var maxdate = ViewBag.maxdate;

}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">My Projects</h2>
        </div>
        <div class="col-6 text-end">
           <a asp-controller="TimeLog" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Log ProjectTime
           </a>
        </div>
   </div>
   <br />

<table class="table table-bordered table-striped" style`="width 100%">  
    <thead> 
        <tr>
            <th>Project Code</th>
            <th>Project</th>
            <th>Log Start Date</th>
            <th>Log End Date</th>
            <th>Total Duration Logged Days</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="20%">@obj.ProjectUser.Project.ProjectCode</td>
                <td width="20%">@obj.ProjectUser.Project.Name</td>
                <td width="20%">@minDate</td>
                <td width="20%">@maxdate</td>
                <td width="20%">@totalDuration</td>
                <td>
                    <div class="w-45 btn-group" role="group">
                        <a asp-controller="TimeLog" asp-action="IndexTimeLog" asp-route-id="@obj.ProjectId"
                        class="btn btn-primary"><i class="bi bi-clipboard-data"></i>TimeLogs</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div> 
@section scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.11.2/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(function(){
            var save = '@TempData["save"]'
            if(save!='') {
                alertify.success(save);
            }
            var edit = '@TempData["edit"]'
            if(edit!='') {
                alertify.success(edit);
            }
            var del = '@TempData["delete"]'
            if (del!='') {
                alertify.error(del);
            }
        })
    </script>
}



