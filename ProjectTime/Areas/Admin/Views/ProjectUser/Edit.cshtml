@model ProjectUser


<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Assigned User to Project</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Project.Name"></label>
            <select asp-for = "ProjectId" asp-items = "ViewBag.projectId" class="form-control" ></select>
            <span asp-validation-for="ProjectId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ApplicationUser.UserName">Employee Name</label>
            <select asp-for = "UserId" asp-items = "ViewBag.appuserId" class="form-control" ></select>
            @*<span asp-validation-for="UserId" class="text-danger"></span>*@
        </div>
        <div class="mb-3">
            <label asp-for="IsActive" ></label>
            <input class="form-check-input" type="checkbox" asp-for="IsActive" style="text-align:left;" />
            <span asp-validation-for="IsActive" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px"><i class="bi bi-pencil-square"></i>Update</button>
        <a asp-controller="ProjectUser" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form>

