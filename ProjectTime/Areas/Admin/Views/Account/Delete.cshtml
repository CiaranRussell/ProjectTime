@model ApplicationUser

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete User</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="FullName">Employee Name</label>
            <input asp-for="FullName" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Department.Name"></label>
            <select asp-for = "DepartmentId" asp-items = "ViewBag.departmentId" class="form-control" disabled></select>
        </div>
        <button type="submit" class="btn btn-danger" onclick="if (!confirm('Are you sure you want to Delete this?')) { return false }" style="width:150px"><i class="bi bi-trash-fill"></i>Delete</button>
        <a asp-controller="Account" asp-action="LockUnLock" asp-route-userid="@Model.Id" class="btn btn-primary" style="width:150px"><i class="bi bi-file-lock"></i> Lock/Unlock</a>
        <a asp-controller="Account" asp-action="Index" class="btn btn-secondary" style="width:150px"><i class="bi bi-skip-backward"></i>Back to List</a>
    </div>
</form>

