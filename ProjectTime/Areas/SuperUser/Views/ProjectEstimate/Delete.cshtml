@model ProjectEstimate


<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Project Estimate Log</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Project.Name"></label>
            <select asp-for = "ProjectId" asp-items = "ViewBag.projectId" class="form-control" disabled></select>
        </div>
        <div class="mb-3">
            <label asp-for="Department.Name"></label>
            <select asp-for = "DepartmentId" asp-items = "ViewBag.departmentId" class="form-control" disabled></select>
        </div>
        <div class="mb-3">
            <label asp-for="DateFrom"></label>
            <input asp-for= "DateFrom" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="DateTo"></label>
            <input asp-for= "DateTo" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="DurationDays"></label>
            <input asp-for= "DurationDays" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <textarea asp-for= "Description" class="form-control" disabled></textarea>
        </div>
        <button type="submit" class="btn btn-danger" onclick="if (!confirm('Are you sure you want to Delete this?')) { return false }" style="width:150px"><i class="bi bi-trash-fill"></i>Delete</button>
        <a asp-controller="ProjectEstimate" asp-action="Index" class="btn btn-secondary" style="width:200px"><i class="bi bi-skip-backward"></i>My Project Estimate</a>
    </div>
</form>
